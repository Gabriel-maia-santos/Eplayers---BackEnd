@model Noticia

@{
    ViewData["Titulo"] = "Noticia";
}

<div class="titulo_pagina">
    <h1>cadastro de @ViewData["Titulo"]</h1>
</div>

<form class="cadastro" action="@Url.Action("Cadastrar")" method="post" enctype="multipart/form-data">

    @* Arrumando a Responsividade *@
    <div class="campo">
    <label for="IdNoticia">Id de Noticias</label>
    <input type="text" name="IdNoticia" id = "IdNoticia">
    </div>
    <div class="campo">
    <label for="Titulo">Titulo da Notícias</label>
    <input type="text" name="Titulo" id = "Titulo">
    </div>
    <div class="campo">
     <label for="Texto">Texto da Notícias</label>
    <input type="text" name="Texto" id = "Texto">
    </div>
    <div class="campo">
     <label for="Image">Imagem da Notícias</label>
    <input type="file" name="Image" id = "Image">
    </div>

    <button class="gradient btn" type="submit">Cadastrar Notícias</button>
    
</form>

<table class="table table-responsive table-striped">
    <thead>
        <th>IdNoticias</th>
        <th>Titulo</th>
        <th>Texto</th>
        <th>Imagem</th>
    </thead>
   <tbody>
        @foreach (var item in ViewBag.Noticia)
        {
            <tr>
                <td>@item.IdNoticia</td>
                <td>@item.Titulo</td>
                <td>@item.Texto</td>
                <td>
                    <img src="img/Noticia/@item.Image" alt="Imagem da equipe @item.Titulo">
                </td>
                <td>
                    @* fazendo o botão de Excluir *@
                    <a asp-area="" asp-controller="Noticias" asp-action="Excluir" asp-route-id="@item.IdNoticia">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>