@model Noticia

@{
    ViewData["Title"] = "Noticia";
}

<form action="@Url.Action("CadastrarNoticia")" method="post">

    <label for="IdNews">IdNoticias</label>
    <input type="text" name="IdNews" id = "IdNews">
    <label for="Title">Titulo da Notícias</label>
    <input type="text" name="Title" id = "Title">
     <label for="Text">Texto da Notícias</label>
    <input type="text" name="Text" id = "Text">
     <label for="Image">Imagem da Notícias</label>
    <input type="file" name="Image" id = "Image">

    <button type="submit">Cadastrar Notícias</button>
    
</form>

<table class="table table-responsive table-striped">
    <thead>
        <th>IdNoticias</th>
        <th>Titulo</th>
        <th>Texto</th>
        <th>Imagem</th>
    </thead>
   <tbody>
        @foreach (var item in ViewBag.Noticia)
        {
            <tr>
                <td>@item.IdNews</td>
                <td>@item.Title</td>
                <td>
                    <img src="img/Noticia/@item.Image" alt="Imagem do Time @item.Title"/>
                </td>
                <td><a asp-area="" asp-controller="Noticia" asp-action="Excluir" asp-route-id="@item.IdNews">Excluir</a></td>
            </tr>
        }
    </tbody>
</table>